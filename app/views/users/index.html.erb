<div class="entry-back">
<section class="section">
    <div class="container">
      <div class="columns is-multiline">
        <% @users.each do |user| %>
          <div class="column is-2">
            <div class="card-image">
              <figure class="image">
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag user, :profile_image, fallback: "noimage.png" %>
                <% end %>
              </figure>
            </div>
            <div class="media">
              <div class="media-content">
                <div class="title"><%= link_to user.user_name, user_path(user) %></div>
              </div>
            </div>
            <div class="post-count">
              投稿数:<%= user.posts.count %>
            </div>
          </div>      
        <% end %>
      </div>
    </div>
  </section>
</div>