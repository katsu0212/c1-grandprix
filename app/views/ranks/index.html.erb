 <div class="entry-back">
  <section class="hero is-danger">
    <div class="container">
      <h1 class="title">
        Ranking
      </h1>
    </div>
  </section>
  
  <h2 class="rank-title">Like Ranking</h2>
  
  <% last_like = 0 %>
  <% j = 1 %>
  <% @month_post_like_ranks .each.with_index(1) do |rank, i| %>
    <% if i == 1 %>
      <% last_like = rank.likes.count %>
    <% end %>
 
    <% if rank.likes.count != last_like %>
      <% j = i %>
      <ul class ="ranking">
        <li>  第<%= j %>位  <%= rank.user.user_name %></li>
        <li><%= rank.likes.count %>いいね</li>
        <li><% last_like = rank.likes.count %> </li>
      </ul>
        
    <% else %>
      <ul class ="ranking">
        <li> 第<%= j %>位 <%= rank.user.user_name %> </li>
          <% last_like = rank.likes.count %>
         <li><%= rank.likes.count %>いいね</li>
      </ul>
    <% end %>

  <% end %>

  <h2 class="rank-title">Dislike Ranking</h2>

  <% last_dislike = 0 %>
  <% j = 1 %>
  <% @month_post_dislike_ranks .each.with_index(1) do |rank, i| %>
    <% if i == 1 %>
      <% last_dislike = rank.dislike.count %>
    <% end %>
  
    <% if rank.dislike.count != last_dislike %>
      <% j = i %>
      <ul class ="ranking">
        <li>第<%= j %>位 <%= rank.user.user_name %></li>
        <li><%= rank.dislike.count %>いいね</li>
        <% last_dislike = rank.dislike.count %>
      </ul>
        
    <% else %>
      <ul class ="ranking">
        <li>第<%= j %>位 <%= rank.user.user_name %></li>
        <% last_dislike = rank.dislike.count %>
        <li><%= rank.dislike.count %>いいね</li>
      </ul>
    <% end %>

  <% end %>
</div>