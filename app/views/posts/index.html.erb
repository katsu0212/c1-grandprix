<div class="my-back">
  <section class="section">
    <div class="container">
      <div class="columns is-multiline">
        <% @posts.each do |post| %>
          <div class="column is-4">
           
             <figure class="image is-4by3">
                <%= link_to post_path(post) do %>
                  <%= attachment_image_tag post, :image %>
                <% end %>
              </figure>
              <div class="is-size-5 "><%= post.body %></div>
            
                <div class="media">
                  <div class="is-size-6">Entry Name</div>
                  <div class="media-content has-text-right is-size-4 has-text-weight-bold">
                    <%=link_to post.user.user_name, user_path(post.user.id) %>
                  </div>
                </div>
                <div class="flex-buttons">
                  <div id="likes_buttons_<%= post.id %>">
                    <%= render partial: 'likes/like', locals: {post: post} %>
                  </div>
                  <div id="dislikes_buttons_<%= post.id %>">
                    <%= render partial: 'dislikes/dislike', locals: {post: post} %>
                  </div>
                </div>
                <div class="content">
                  <time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>
                </div>
           
        
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>

