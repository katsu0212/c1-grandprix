<div class="my-back">
  <div class="post-right">
    写真で一言
  </div>
  <% @posts.each do |post| %>
    <div class="column is-7">
      <div class="image is-1by1">
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image %>
          写真で一言
        <% end %>
      </div>
      <div class="is-size-4">
        <%= post.body %>
      </div>
      <div class="media">
        <div class="media-content has-text-right is-size-5 has-text-weight-bold">
          <%= link_to post.user.user_name, user_path(post.user.id) %>
        </div>
      </div>
      <div class="flex-buttons">
        <div id="likes_buttons_<%= post.id %>">
          <%= render partial: 'likes/like', locals: {post: post} %>
        </div>
      </div>
    </div>
    <div class="content">
      <time><%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></time>
    </div>

  <% end %>
</div>

