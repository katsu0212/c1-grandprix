<div class="title-back">
  <% if @post.errors.any? %>
    <div class="notification is-danger">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <%= form_for @post do |f| %>
            <div class="field">
              <%= f.label :image, "写真", class: "label" %>
              <%= f.attachment_field :image, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :body, "ひとこと", class: "label" %>
              <%= f.text_area :body, class: "textarea" %>
            </div>

              <%= f.submit "投稿", class: "button is-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</div>
