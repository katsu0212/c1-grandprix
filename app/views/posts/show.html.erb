<div class="post-show-back">
  <section class="section">
    <div class="detail">写真で一言</div>
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-7">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= attachment_image_tag @post, :image %>
              </figure>
            </div>
            <div class="card-content">
              <div class="content">
                <table class="table is-narrow">
                  <tr>
                    <td><%= simple_format @post.body %></td>
                  </tr>
                </table>
                <% if @post.user.id == current_user.id %>
                  <%= link_to "編集", edit_post_path(@post), class: "button is-black" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="name-holder">
          <%= link_to user_path(@post.user), class: "panel-block" do %>
          <div class="panel">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            名前    <%= @post.user.user_name %>
          </div>
          <% end %>         
        </div>
      </div>
    </div>
  </section>
</div>