<% if user_signed_in? && current_user.id != post.user.id %>
  <% if current_user.liked_by?(post.id)  %>
    <td>
      <%= link_to destroy_like_path(post), method: :DELETE, remote: true do %> 
        <i class="far fa-grin-squint-tears unlike-btn"></i> 
      <% end %> 
      <%= post.likes.count %>
    </td>
  <% elsif current_user.disliked_by?(post.id) %>
    <td>
      <i class="far fa-grin-squint-tears unlike"></i> 
      <%= post.likes.count %>
    </td>
  <% else %>
    <td>
      <%= link_to create_like_path(post), method: :POST, remote: true do %> 
        <i class="far fa-grin-squint-tears like-btn"></i> 
      <% end %> 
      <%= post.likes.count %>
    </td>
  <% end %>
<% end %>


